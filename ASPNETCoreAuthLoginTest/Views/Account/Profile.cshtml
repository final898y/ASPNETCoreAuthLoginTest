@model User
@{
    ViewData["Title"] = "個人資料";
}

<h2>@ViewData["Title"]</h2>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">用戶名</dt>
        <dd class="col-sm-10">@Model.Username</dd>
        <dt class="col-sm-2">郵箱</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">角色</dt>
        <dd class="col-sm-10">@Model.Role</dd>
    </dl>
</div>