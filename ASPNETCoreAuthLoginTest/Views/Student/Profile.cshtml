@model ASPNETCoreAuthLoginTest.Models.StudentProfileViewModel

@{
    ViewData["Title"] = "學生個人資料";
}

<h2>@ViewData["Title"]</h2>

<div class="card mt-3" style="max-width: 400px;">
    <div class="card-body">
        <h5 class="card-title">帳號資訊</h5>

        <dl class="row">
            <dt class="col-sm-4">使用者名稱</dt>
            <dd class="col-sm-8">@Model.UserName</dd>

            <dt class="col-sm-4">角色</dt>
            <dd class="col-sm-8">@Model.Role</dd>

            <dt class="col-sm-4">帳號名稱</dt>
            <dd class="col-sm-8">@Model.AccountName</dd>

            <dt class="col-sm-4">年級</dt>
            <dd class="col-sm-8">@Model.Grade</dd>

            <dt class="col-sm-4">班級</dt>
            <dd class="col-sm-8">@Model.Class</dd>
        </dl>
    </div>
</div>
